@page "/bookmarks"
@inject PostService PostService
@inject AuthenticationStateProvider AuthStateProvider
@using LitePost.Data.Models

<h4 class="fw-bold mb-3">Bookmarks</h4>
<div class="text-muted small mb-4">@userDisplayName</div>

@if (posts == null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (posts.Count == 0)
{
    <div class="text-center mt-5">
        <div class="fs-1 text-muted"><i class="bi bi-bookmark-plus"></i></div>
        <h3 class="mt-3">Save posts for later</h3>
        <p class="text-muted">Bookmark posts to easily find them again in the future.</p>
    </div>
}
else
{
    @foreach (var post in posts)
    {
        <PostItem Post="@post" />
    }
}

@code {
    private List<Post>? posts;
    private int currentUserId;
    private string userDisplayName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            userDisplayName = "@" + user.Identity.Name;
            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim != null)
            {
                currentUserId = int.Parse(userIdClaim.Value);
                posts = await PostService.GetBookmarks(currentUserId);
            }
        }
    }
}