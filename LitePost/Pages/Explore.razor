@page "/explore"
@inject PostService PostService

<div class="mb-3">
    <div class="input-group input-group-lg">
        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
        <input type="text" class="form-control bg-light border-start-0" placeholder="Search LitePost" @bind="searchQuery" @bind:event="oninput" @onkeyup="Search">
    </div>
</div>

<h5 class="fw-bold mb-3">Trends for you</h5>
<ul class="list-group list-group-flush mb-4">
    <li class="list-group-item bg-transparent">
        <small class="text-muted">Trending in Indonesia</small>
        <div class="fw-bold">#LitePostIsAwesome</div>
        <small class="text-muted">10.5K posts</small>
    </li>
    <li class="list-group-item bg-transparent">
        <small class="text-muted">Technology Â· Trending</small>
        <div class="fw-bold">Blazor Server</div>
        <small class="text-muted">5,234 posts</small>
    </li>
    <li class="list-group-item bg-transparent">
        <small class="text-muted">Trending</small>
        <div class="fw-bold">Coding</div>
        <small class="text-muted">121K posts</small>
    </li>
</ul>

<h5 class="fw-bold mb-3">Latest Posts</h5>
@if (posts == null)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (posts.Count == 0)
{
    <div class="text-center p-5">
        <p class="text-muted">No posts found.</p>
    </div>
}
else
{
    @foreach (var post in posts)
    {
        <PostItem Post="@post" />
    }
}

@code {
    private string searchQuery = string.Empty;
    private List<Post>? posts;

    protected override async Task OnInitializedAsync()
    {
        // Default show random/latest
        posts = await PostService.GetFeed();
    }

    private async Task Search()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            posts = await PostService.GetFeed();
        }
        else
        {
            posts = await PostService.SearchPosts(searchQuery);
        }
    }
}