@page "/verified"
@inject PostService PostService

<div class="mb-4 d-flex align-items-center">
    <i class="bi bi-patch-check-fill text-primary fs-3 me-2"></i>
    <h4 class="fw-bold mb-0">Verified Feed</h4>
</div>

<p class="text-muted small">Posts from verified users, influencers, and notable figures.</p>

@if (posts == null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (posts.Count == 0)
{
    <div class="alert alert-info" role="alert">
        No posts from verified users yet. Be the first one!
    </div>
}
else
{
    @foreach (var post in posts)
    {
        <PostItem Post="@post" />
    }
}

@code {
    private List<Post>? posts;

    protected override async Task OnInitializedAsync()
    {
        posts = await PostService.GetVerifiedFeed();
    }
}