@inherits LayoutComponentBase
@using MediaMonitoring.Services
@inject AuthService AuthService

<div class="navbar">
    <a href="/" class="nav-brand">[ MEDIA MONITOR ]</a>
    <div class="nav-links" style="display: flex; align-items: center;">
        <a href="/">Dashboard</a>
        <a href="/monitoring">Monitoring</a>
        <a href="/geomap">Geo Map</a>
        <a href="/network">Network</a>
        <a href="/alerts">Alerts</a>
        <a href="/settings">Settings</a>
        
        @if (AuthService.CurrentUserId.HasValue)
        {
            <a href="/profile" style="margin-left: auto; display: flex; align-items: center; gap: 8px; background: rgba(255,255,255,0.1); padding: 8px 12px; border-radius: 4px;">
                <span style="font-size: 1.2rem;">ðŸ‘¤</span>
                <span>Profile</span>
            </a>
            <a href="/login" onclick="@(() => HandleLogout())" style="margin-left: 8px; display: flex; align-items: center; gap: 8px; background: rgba(255,51,51,0.2); padding: 8px 12px; border-radius: 4px;">
                <span>[ Logout ]</span>
            </a>
        }
        else
        {
            <a href="/login" style="margin-left: auto; background: rgba(255,255,255,0.1); padding: 8px 12px; border-radius: 4px;">
                [ Login ]
            </a>
        }
    </div>
</div>

<div class="container">
    <main>
        @Body
    </main>
</div>

<footer style="margin-top: 40px; padding: 20px; border-top: 2px solid #1a1a1a; text-align: center; font-size: 0.8rem;">
    <p>&copy; @DateTime.Now.Year Media Monitoring OSINT System | Built with Blazor Server, D3.js & ML.NET</p>
    <p class="text-muted">Developed by Jacky the Code Bender - Gravicode Studios</p>
</footer>

@code {
    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
    }
}